<p id="notice"><%= notice %></p>

<h1>Cook with what you have</h1>
<br>

<h3>Pick an ingredient</h3>
<p>
<select style="width: 200px;">
  <option> Select one</option>  
  # <option value = "i"> Select one</option>
</select>
</p>
<br>

<table>
  <thead>
    <tr>
      <th>Recipes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><a href="<%= recipe.recipe_url %>" target="_blank"><%= recipe.recipe_url %></a></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Remove', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
